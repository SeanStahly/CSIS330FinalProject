<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView android:id="@+id/dialogPersonNameLabel" android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Person:"/>
    <EditText android:id="@+id/dialogPersonNameEdit"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="@string/dialog_name_hint"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:id="@+id/dialogPhoneNumberLabel"
            android:text="Phone Number:"/>
    <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
            android:id="@+id/dialogPhoneNumberEditText"
            android:inputType="number"
            android:hint="0000000000"/>
    <TextView android:id="@+id/dialogInstrumentLabel" android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Instrument:"/>
    <EditText android:id="@+id/dialogInstrumentEditText" android:layout_width="match_parent"
              android:layout_height="wrap_content"

              android:hint="Instrument"/>

</LinearLayout>