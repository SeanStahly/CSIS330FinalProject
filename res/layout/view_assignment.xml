<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <TableLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:stretchColumns="2" android:layout_margin="5dp">
        <TableRow android:id="@+id/personLabelRow" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:id="@+id/personLabelTextView" android:text="@string/person_label"/>
        </TableRow>
        <TableRow android:id="@+id/personSelectRow" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:id="@+id/personNameTextView" android:layout_width="wrap_content"/>
            <Button android:id="@+id/personSelectButton" android:layout_width="wrap_content" android:layout_column="1"/>
        </TableRow>
        <TableRow android:id="@+id/equipmentLabelRow" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:id="@+id/equipmentLabelTextView" android:text="@string/equipment_label"/>
        </TableRow>
        <TableRow android:id="@+id/equipmentSelectRow" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:id="@+id/equipmentNameTextView" android:layout_width="wrap_content"/>
            <Button android:id="@+id/equipmentSelectButton" android:layout_width="wrap_content" android:layout_column="1"/>
        </TableRow>
    </TableLayout>

</ScrollView>